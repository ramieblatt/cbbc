<p id="notice"><%= notice %></p>

<h1>Players</h1>

<%= search_form_for @q do |f| %>
  <b>Prebuilt Searches</b><br/>
  <%= link_to "Non-active Players with 5000 or more PA", players_url(q: {active_eq: false, with_career_num_ab_greater_than: 5000}), class:"default-button" %> &nbsp;
  <%= link_to "Non-active Players with 1800 or more IP and .520+ win percentage", players_url(q: {active_eq: false, with_career_num_ips_greater_than: 1800, with_career_winning_percentage_greater_than: 0.52}), class:"default-button" %><br/>
  <%= link_to "Non-active Players with 184 or more saves", players_url(q: {active_eq: false, with_career_num_sv_greater_than: 184}), class:"default-button" %> &nbsp;
  <%= link_to "Non-active Players with fewer than 5000 PA in the Hall of Fame", players_url(q: {active_eq: false, with_career_num_ab_less_than: 5000, is_hall_of_famer_eq: true}), class:"default-button" %><br/>
  <%= link_to "Active Players that have appeared in an All Star Game", players_url(q: {active_eq: true, is_all_star_eq: true}), class:"default-button" %> &nbsp;
  <%= link_to "Managers with > 500 wins", players_url(q: {managers_with_career_w_greater_than: 500}), class:"default-button" %> &nbsp;
  <%= link_to "Negro League Players in the Hall of Fame", players_url(q: {is_nlg_hall_of_famer_eq: true}), class:"default-button" %>
  <p/>
  <p/>
  <b>General Search Criteria</b><br/>
  <%= f.label "Name" %>
  <%= f.search_field :first_name_or_last_name_or_given_name_cont %>
  &nbsp;
  <%= f.label "BBRef ID" %>
  <%= f.search_field :lahman_bbref_id_cont, size: 10 %>
  &nbsp;
  <%= f.label "Position(s)" %>
  <%= f.collection_select :fielding_stats_position_code_in, FieldingStat.select("distinct position_code").order(:position_code), :position_code, :position_code, include_blank: true %>
  &nbsp;
  <%= f.label "Active" %>
  <%= f.collection_select :active_eq, [false, true], :present?, :present?, include_blank: true %>
  &nbsp;
  <%= f.label "Plate Appearances >" %>
  <%= f.search_field :with_career_num_ab_greater_than, size: 5 %>
  &nbsp;
  <%= f.label "Plate Appearances <" %>
  <%= f.search_field :with_career_num_ab_less_than, size: 5 %>
  <p/>
  <b>Pitching</b> &nbsp;
  <%= f.label "Innings Pitched >" %>
  <%= f.search_field :with_career_num_ips_greater_than, size: 4 %>
  &nbsp;
  <%= f.label "Pitching Win % >" %>
  <%= f.search_field :with_career_winning_percentage_greater_than, size: 4 %>
  &nbsp;
  <%= f.label "Saves >" %>
  <%= f.search_field :with_career_num_sv_greater_than, size: 4 %>
  <p/>
  <b>Awards</b> &nbsp;
  <%= f.label "Hall of Famer" %>
  <%= f.collection_select :is_hall_of_famer_eq, [false, true], :present?, :present?, include_blank: true %>
  &nbsp;
  <%= f.label "All Star" %>
  <%= f.collection_select :is_all_star_eq, [false, true], :present?, :present?, include_blank: true %>
  &nbsp;
  <%= f.label "Negro League Hall of Fame" %>
  <%= f.collection_select :is_nlg_hall_of_famer_eq, [false, true], :present?, :present?, include_blank: true %>
  &nbsp;
  <b>Managing</b> &nbsp;
  <%= f.label "Manager Wins >" %>
  <%= f.search_field :managers_with_career_w_greater_than, size: 4 %>
  &nbsp;
  <%= f.submit %>
  <%= link_to "Clear", players_url, class:"cancel-button" %>
<% end %>
<b>Total: <%= @players.total_count %></b>
<%= paginate @players, theme: 'twitter-bootstrap-4' %>
<%= render partial: 'players/players' %>
<p/>
<p/>
<b>Total: <%= @players.total_count %></b>
<%= paginate @players, theme: 'twitter-bootstrap-4' %>
<% if Edition.unpublished.any? %>
 <p/>
 <p/>
  <%= simple_form_for :edition, url: create_cards_from_players_editions_path do |ef| %>
    <%= render partial: 'create_cards_from_players_form', locals: { f: ef } %>
  <% end %>
<p/>
<% end %>

